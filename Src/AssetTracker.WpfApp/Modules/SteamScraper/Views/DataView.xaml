<UserControl x:Class="AssetTracker.WpfApp.Modules.SteamScraper.Views.DataView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AssetTracker.WpfApp.Modules.SteamScraper.Views"
             xmlns:steamconverters="clr-namespace:AssetTracker.WpfApp.Modules.SteamScraper.Converters"
             xmlns:sc="clr-namespace:System.ComponentModel;assembly=WindowsBase"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <!--<steamconverters:SteamImageConverter x:Key="SteamImageConverter"/>-->
    </UserControl.Resources>

    <Grid Margin="10">
        <!--<TextBlock Text="Steam Data View"/>-->

        <ListView ItemsSource="{Binding Games}" 
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  BorderThickness="0">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#404040" BorderThickness="0,0,0,1" 
                            Padding="10,5" Background="Transparent">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- App ID -->
                                <TextBlock Grid.Column="0" 
                                       Text="{Binding AppId}" 
                                       Width="60"
                                       Foreground="Gray"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>

                                <!-- Game Image -->
                                <Border Grid.Column="1" 
                                    Width="48" Height="48" 
                                    CornerRadius="2" 
                                    Background="#1A1A1A" 
                                    Margin="10,0">
                                    <!--<Image Source="{Binding ImgIconUrl, Converter={StaticResource SteamImageConverter}}"
                                       Stretch="Uniform"/>-->
                                <Image Source="{Binding FullImageUrl}"
                                       Stretch="Uniform"/>


                            </Border>

                                <!-- Game Name -->
                                <TextBlock Grid.Column="2" 
                                       Text="{Binding Name}" 
                                       VerticalAlignment="Center"
                                       FontSize="14"
                                       Margin="10,0"/>

                                <!-- Playtime -->
                                <TextBlock Grid.Column="3" 
                                       Text="{Binding PlaytimeForever, StringFormat={}{0} hrs}" 
                                       VerticalAlignment="Center"
                                       Foreground="LightGray"
                                       Width="80"
                                       HorizontalAlignment="Right"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>

                <!-- Sort by Name --><!--
                <ListView.SortDescriptions>
                    <sc:SortDescription PropertyName="Name" Direction="Ascending"/>
                </ListView.SortDescriptions>-->
            </ListView>
        </Grid>
</UserControl>
