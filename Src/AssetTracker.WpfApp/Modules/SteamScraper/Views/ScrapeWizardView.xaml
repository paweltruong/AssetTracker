<UserControl x:Class="AssetTracker.WpfApp.Modules.SteamScraper.Views.ScrapeWizardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AssetTracker.WpfApp.Modules.SteamScraper.Views"             
             xmlns:converters="clr-namespace:AssetTracker.WpfApp.Common.Converters"   
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:BooleanInverterConverter x:Key="BooleanInverterConverter"/>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Rounded Button Style -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="MinWidth" Value="80" />
            <Setter Property="MinHeight" Value="30" />
            <Setter Property="Background" Value="#F0F0F0"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="5 ,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
           CornerRadius="6" 
           Background="{TemplateBinding Background}"
           BorderBrush="{TemplateBinding BorderBrush}"
           BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E0E0E0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#D0D0D0"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#F5F5F5"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#E0E0E0"/>
                                <Setter Property="Foreground" Value="#999999"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock TextWrapping="Wrap" Margin="10">
            <Run Text="Enter your SteamId" FontWeight="Bold"/>
            <LineBreak/>
            <Run Text="If you don't know your steam id perform these steps:"/>
            <LineBreak/>
            <Run Text="Step 1: go to "/>
            <Hyperlink NavigateUri="https://steamcommunity.com/" 
                       Command="{Binding OpenLinkCommand}" 
                       CommandParameter="https://steamcommunity.com/">
                https://steamcommunity.com/
            </Hyperlink>
            <LineBreak/>
            <Run Text="Step 2: Login"/>
            <LineBreak/>
            <Run Text="Step 3: In upper right corner click on your profile's icon"/>
            <LineBreak/>
            <Run Text="Step 4: Copy to clipboard your SteamId from browser address bar"/>
            <LineBreak/>
            <Run Text="https://steamcommunity.com/profiles/{YOUR_STEAM_ID}/" FontStyle="Italic"/>
            <LineBreak/><LineBreak/>
            <Grid Margin="20">
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                  </Grid.ColumnDefinitions>
        
                <Label Content="SteamId:" FontWeight="Bold" Grid.Column="0" Margin="0,0,0,5"/>
        
                <PasswordBox x:Name="SteamIdBox" 
                             MinWidth="200px"
                             Grid.Column="1" 
                             Margin="0,0,0,0"
                             PasswordChar="*"
                             PasswordChanged="SteamIdBox_PasswordChanged"/>
          
            </Grid>
            <LineBreak/><LineBreak/>
        
            <Run Text="Enter your Steam ApiKey" FontWeight="Bold"/>
            <LineBreak/>
            <Run Text="If you don't know your Steam Api Key perform these steps:"/>
            <LineBreak/>
            <Run Text="Step 1: go to "/>
            <Hyperlink NavigateUri="https://steamcommunity.com/dev/apikey" 
                       Command="{Binding OpenLinkCommand}" 
                       CommandParameter="https://steamcommunity.com/dev/apikey">
                https://steamcommunity.com/dev/apikey
            </Hyperlink>
            <LineBreak/>
            <Run Text="Step 2: Copy your SteamApi key to clipboard"/>
            <LineBreak/><LineBreak/>
            <Grid Margin="20">
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                  </Grid.ColumnDefinitions>

                <Label Content="Steam API Key:" FontWeight="Bold" Grid.Column="0" Margin="0,0,0,5"/>

                <PasswordBox x:Name="SteamApiBox" 
                             MinWidth="200px"
                             Grid.Column="1" 
                             Margin="0,0,0,0"
                             PasswordChar="*"
                             PasswordChanged="SteamApiBox_PasswordChanged"/>
  
            </Grid>
            <LineBreak/><LineBreak/>
        </TextBlock>

        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Grid.Row="1">
            <Button Content="Stop" 
                    Style="{StaticResource RoundedButtonStyle}"
                    IsEnabled="{Binding CanStop, Converter={StaticResource BooleanInverterConverter}}"
                    Command="{Binding StopCommand}"/>
            <Button Content="Start" 
                    Style="{StaticResource RoundedButtonStyle}"
                    IsEnabled="{Binding CanStart}"
                    Command="{Binding StartCommand}"/>
            <!--<Button Content="Start"
                    Style="{StaticResource RoundedButtonStyle}"
                    Command="{Binding StartCommand}"/>-->
        </StackPanel>

        <ProgressBar Grid.Row="2" 
                     Height="20"
                     IsIndeterminate="{Binding IsProcessing}"
                     Visibility="{Binding IsProcessing, Converter={StaticResource BooleanToVisibilityConverter}}" />
    </Grid>
</UserControl>
