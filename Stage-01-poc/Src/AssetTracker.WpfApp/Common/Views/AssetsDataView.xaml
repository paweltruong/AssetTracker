<UserControl x:Class="AssetTracker.WpfApp.Common.Views.AssetsDataView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AssetTracker.WpfApp.Common.Views"
             xmlns:converters="clr-namespace:AssetTracker.WpfApp.Common.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <converters:CollectionToVisibilityConverter x:Key="CollectionToVisibilityConverter"/>
        <converters:InvertedCollectionToVisibilityConverter x:Key="InvertedCollectionToVisibilityConverter"/>

        <!-- Style for sortable column headers -->
        <Style x:Key="SortableColumnHeaderStyle" TargetType="GridViewColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Command" Value="{Binding DataContext.SortCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
            <Setter Property="CommandParameter" Value="{Binding RelativeSource={RelativeSource Self}}"/>
        </Style>

        <!-- Style for list view items -->
        <Style x:Key="ListViewItemStyle" TargetType="ListViewItem">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4">
                            <GridViewRowPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#F0F0F0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Link Button Style -->
        <Style x:Key="LinkButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#0078D4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <TextBlock Text="{TemplateBinding Content}" 
                                   Foreground="{TemplateBinding Foreground}"
                                   TextDecorations="Underline"
                                   Padding="{TemplateBinding Padding}"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#005A9E"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <TextBlock Text="No data" 
                   Visibility="{Binding OwnedAssets, Converter={StaticResource InvertedCollectionToVisibilityConverter}}" 
                   Margin="5,5,5,5"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="16"
                   Foreground="Gray"/>

        <ListView ItemsSource="{Binding OwnedAssets}"
                  Visibility="{Binding OwnedAssets, Converter={StaticResource CollectionToVisibilityConverter}}"
                  Margin="5,5,5,5"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  VirtualizingPanel.IsVirtualizing="True"
                  VirtualizingPanel.VirtualizationMode="Recycling"
                  Background="Transparent"
                  BorderThickness="0"
                  ItemContainerStyle="{StaticResource ListViewItemStyle}">

            <ListView.View>
                <GridView>
                    <!-- Asset Column -->
                    <GridViewColumn Width="220" Header="Asset" HeaderContainerStyle="{StaticResource SortableColumnHeaderStyle}">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <Image Source="{Binding ImageUrl}" 
                                           Width="64" 
                                           Height="64" 
                                           Stretch="Uniform"
                                           HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding AssetType}" 
                                               HorizontalAlignment="Center"
                                               Margin="0,4,0,0"
                                               FontSize="10"
                                               Foreground="Gray"/>
                                    <TextBlock Text="{Binding MarketplaceUid}" 
                                                HorizontalAlignment="Center"
                                                Margin="0,4,0,0"
                                                FontSize="10"
                                                Foreground="Gray"/>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Name Column -->
                    <GridViewColumn Width="200" Header="Name" HeaderContainerStyle="{StaticResource SortableColumnHeaderStyle}"
                                   DisplayMemberBinding="{Binding Name}"/>

                    <!-- Publishers Column -->
                    <GridViewColumn Width="150" Header="Publishers" HeaderContainerStyle="{StaticResource SortableColumnHeaderStyle}">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <ItemsControl ItemsSource="{Binding Publishers}" BorderThickness="0" Padding="0" Background="Transparent">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Vertical"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Name}" Margin="0,1"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Developers Column -->
                    <GridViewColumn Width="150" Header="Developers" HeaderContainerStyle="{StaticResource SortableColumnHeaderStyle}">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <ItemsControl ItemsSource="{Binding Developers}" BorderThickness="0" Padding="0" Background="Transparent">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Vertical"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Name}" Margin="0,1"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Tags Column -->
                    <GridViewColumn Width="200" Header="Tags" HeaderContainerStyle="{StaticResource SortableColumnHeaderStyle}">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <ItemsControl ItemsSource="{Binding Tags}" BorderThickness="0" Padding="0" Background="Transparent">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#F0F0F0" 
                                                    CornerRadius="10" 
                                                    Padding="6,2" 
                                                    Margin="2,1">
                                                <TextBlock Text="{Binding}" 
                                                           FontSize="10" 
                                                           Foreground="#555"/>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Marketplace Column -->
                    <GridViewColumn Width="120" Header="Marketplace" HeaderContainerStyle="{StaticResource SortableColumnHeaderStyle}">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding MarketplaceName}" 
                                               FontSize="11" 
                                               Foreground="DarkBlue"
                                               FontWeight="SemiBold"/>
                                    <Button Content="View" 
                                            Command="{Binding DataContext.ViewMarketplaceCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding AssetUrl}"
                                            Style="{StaticResource LinkButtonStyle}"
                                            Margin="0,4,0,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>