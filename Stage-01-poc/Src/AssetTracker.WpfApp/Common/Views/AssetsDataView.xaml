<UserControl x:Class="AssetTracker.WpfApp.Common.Views.AssetsDataView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AssetTracker.WpfApp.Common.Views"
             xmlns:converters="clr-namespace:AssetTracker.WpfApp.Common.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <converters:CollectionToVisibilityConverter x:Key="CollectionToVisibilityConverter"/>
        <converters:InvertedCollectionToVisibilityConverter x:Key="InvertedCollectionToVisibilityConverter"/>

        <!-- Style for the Border that wraps each item -->
        <Style x:Key="ListItemBorderStyle" TargetType="Border">
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>

        <!-- Link Button Style -->
        <Style x:Key="LinkButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#0078D4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <TextBlock Text="{TemplateBinding Content}" 
                                   Foreground="{TemplateBinding Foreground}"
                                   TextDecorations="Underline"
                                   Padding="{TemplateBinding Padding}"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#005A9E"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>

        <TextBlock Text="No data" Visibility="{Binding OwnedAssets, Converter={StaticResource InvertedCollectionToVisibilityConverter}}" 
                   Margin="5,5,5,5"/>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding OwnedAssets}"
                          Visibility="{Binding OwnedAssets, Converter={StaticResource CollectionToVisibilityConverter}}"
                          Margin="5,5,5,5">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <!-- Use the correct style for Border -->
                        <Border Style="{StaticResource ListItemBorderStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" MinWidth="220"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Icon Column -->
                                <StackPanel Grid.Column="0" Margin="0,0,12,0" VerticalAlignment="Top">
                                    <Image Source="{Binding ImageUrl}" 
                                       Width="64" 
                                       Height="64" 
                                       Stretch="Uniform"
                                       HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding AssetType}" 
                                           HorizontalAlignment="Center"
                                           Margin="0,4,0,0"
                                           FontSize="10"
                                           Foreground="Gray"/>
                                    <TextBlock Text="{Binding MarketplaceUid}" 
                                            HorizontalAlignment="Center"
                                            Margin="0,4,0,0"
                                            FontSize="10"
                                            Foreground="Gray"/>
                                </StackPanel>

                                <!-- Main Content Column -->
                                <StackPanel Grid.Column="1" Margin="0">
                                    <TextBlock Text="{Binding Name}" 
                                           FontWeight="Bold" 
                                           FontSize="14"
                                           TextWrapping="Wrap"/>

                                    <!-- Publishers -->
                                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                        <TextBlock Text="Publishers: " FontWeight="SemiBold" Foreground="DarkGray"/>
                                        <ItemsControl ItemsSource="{Binding Publishers}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel Orientation="Horizontal"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding Name}" Margin="2,0"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>

                                    <!-- Developers -->
                                    <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                        <TextBlock Text="Developers: " FontWeight="SemiBold" Foreground="DarkGray"/>
                                        <ItemsControl ItemsSource="{Binding Developers}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel Orientation="Horizontal"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding Name}" Margin="2,0"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>

                                    <!-- Tags -->
                                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                        <TextBlock Text="Tags: " FontWeight="SemiBold" Foreground="DarkGray"/>
                                        <ItemsControl ItemsSource="{Binding Tags}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel Orientation="Horizontal"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="#F0F0F0" 
                                                        CornerRadius="10" 
                                                        Padding="6,2" 
                                                        Margin="2,1">
                                                        <TextBlock Text="{Binding}" 
                                                               FontSize="10" 
                                                               Foreground="#555"/>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Marketplace Link Column -->
                                <StackPanel Grid.Column="2" Margin="12,0,0,0" VerticalAlignment="Top">
                                    <TextBlock Text="{Binding MarketplaceName}" 
                                           FontSize="11" 
                                           Foreground="DarkBlue"
                                           FontWeight="SemiBold"
                                           HorizontalAlignment="Right"/>
                                    <Button Content="View in Marketplace" 
                                        Command="{Binding DataContext.ViewMarketplaceCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding AssetUrl}"
                                        Style="{StaticResource LinkButtonStyle}"
                                        HorizontalAlignment="Right"
                                        Margin="0,4,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

    </Grid>
</UserControl>