<UserControl x:Class="AssetTracker.WpfApp.Modules.Main.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AssetTracker.WpfApp.Modules.Main.Views"
             xmlns:converters="clr-namespace:AssetTracker.WpfApp.Common.Converters"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>

        <converters:CollectionToVisibilityConverter x:Key="CollectionToVisibilityConverter"/>
        <converters:ColorToBrushConverter x:Key="ColorToBrushConverter"/>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Width" Value="180"/>
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style x:Key="InputStyle" TargetType="TextBox">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Width" Value="450"/>
        </Style>
    </UserControl.Resources>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Settings"
                   FontWeight="Bold"
                   FontSize="21"
                   Margin="10"/>
        <StackPanel Grid.Row="1" Orientation="Vertical">
            <StackPanel Orientation="Horizontal" >
                <TextBlock Text="Cache Path:" Style="{StaticResource LabelStyle}"></TextBlock>
                <TextBox Text="{Binding ConfigPath}" Style="{StaticResource InputStyle}"/>
                <Button Content="Open" 
                        Command="{Binding OpenLocationCommand}" 
                        CommandParameter="{Binding ConfigPath}" />
            </StackPanel>

            <!--Tags-->
            <TextBlock Text="Tags"
                       FontWeight="Bold"
                        FontSize="18"
                        Margin="10"/>

            <Grid >
                <DataGrid ItemsSource="{Binding SystemTags}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          Margin="10"
                            Visibility="{Binding SystemTags, Converter={StaticResource CollectionToVisibilityConverter}}">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="System Tag" Width="200">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="{Binding Name}" 
                                             Command="{Binding DataContext.OpenLinkCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                             CommandParameter="{Binding Name}"
                                             Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                                             Background="Transparent"
                                             BorderThickness="0"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="Tag Color" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <xctk:ColorPicker SelectedColor="{Binding Color, Mode=TwoWay}"
                              UsingAlphaChannel="False"
                              ShowRecentColors="True"
                              Height="25"
                              Width="80"
                              Margin="2"
                              BorderThickness="1"
                              ToolTip="Click to change tag color"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

        </StackPanel>

    </Grid>
</UserControl>
